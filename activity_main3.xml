<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#EC1C24"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="50dp">

        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#FEF100"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="50dp">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.7"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#22B04C"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="50dp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#A249A3"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="50dp">

            </TextView>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#C7BEE6"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="50dp">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FE7F27"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="50dp">

        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#3F48CB"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="50dp">

        </TextView>
    </LinearLayout>
</LinearLayout>